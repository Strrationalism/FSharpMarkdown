<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45</TargetFrameworks>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Authors>Seng Jik</Authors>
    <Company>Strrationalism</Company>
    <PackageProjectUrl>https://github.com/Strrationalism/FSharpMarkdown</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Strrationalism/FSharpMarkdown</RepositoryUrl>
    <RepositoryType>github</RepositoryType>
    <Description>The DSL for generating Markdown Document.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="AST.fs" />
    <Compile Include="Markdown.fs" />
    <Compile Include="Generator.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="4.1.17" />
  </ItemGroup>

</Project>
